<h1>Edit your contribution</h1>

<%= form_for [@story, @addition] do |f| %>
  <div class="form-group">
    <%= f.label :body, "Keep it to one sentence!" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :author, "Your Name" %>
    <%= f.text_field :author, class: "form-control" %>
  </div>
  <%= f.submit "Submit", class: "btn btn-default center-block" %>
<% end %>

<%= link_to "Back", :back %>
